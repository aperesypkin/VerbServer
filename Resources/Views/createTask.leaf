#set("content") {
  <h1>#(title)</h1>
  <form method="post">
    <div class="form-group">
      <input type="text" name="title" placeholder="Title" class="form-control" id="title"/>
    </div>
    <div class="form-group">
      <textarea rows="3" type="description" name="description" placeholder="Description" class="form-control" id="description"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
  </form>
}
#embed("base")
